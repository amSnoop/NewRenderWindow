<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NewRenderWindow.MainWindow"
        Title="NewRenderWindow">
	<Grid ColumnDefinitions="*,Auto" Background="{DynamicResource BackgroundMenu}">
		<!-- Menu Bar -->
		<Grid Grid.Column="1" ColumnDefinitions="Auto,*">
			<!-- Collapsed Menu Buttons -->
			<ListBox Grid.Column="1" SelectionMode="Single,Toggle" x:Name="menuOptions" Background="Orange">
				<ListBoxItem Classes="MenuButtons" Background="Black" x:Name="Nodes">
					<TextBlock Background="Blue">Nodes</TextBlock>
					</ListBoxItem>
					<ListBoxItem Classes="MenuButtons" x:Name="Settings">
					<TextBlock Background="Blue">Settings</TextBlock>
				</ListBoxItem>
					<ListBoxItem Classes="MenuButtons" x:Name="Queue">
					<TextBlock Background="Blue">Queue</TextBlock>
				</ListBoxItem>
			</ListBox>
			<Grid Grid.Column="0" x:Name="menuPanel">

				<!-- Nodes Setup menu panel -->
				<Grid IsVisible="{Binding #Nodes.IsSelected}" x:Name="menuNodes" Background="Beige" Width="50" Height="500">
					
				</Grid>

				<!-- Settings menu panel -->
				<Grid IsVisible="{Binding #Settings.IsSelected}" x:Name="menuSettings" Background="Aqua" Width="50" Height="500">

				</Grid>
				<!-- Queue menu panel -->
				<Grid IsVisible="{Binding #Queue.IsSelected}" x:Name="menuQueue" Background="Fuchsia" Width="50" Height="500">

				</Grid>
			</Grid>
		</Grid>
	</Grid>
</Window>
