<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NewRenderWindow.MainWindow"
        Title="NewRenderWindow">
	<Grid ColumnDefinitions="Auto,*" Background="IndianRed">
		<!-- Menu Bar -->
		<Grid Grid.Column="0" ColumnDefinitions="Auto,*">
			<!-- Collapsed Menu Buttons -->
			<ListBox Grid.Column="0" SelectionMode="Single,Toggle" x:Name="menuOptions" SelectedItem="{Binding SelectedMenu}" Background="Orange">
				<ListBoxItem Background="Black" x:Name="Nodes">
					<TextBlock Background="Blue">Nodes</TextBlock>
					</ListBoxItem>
					<ListBoxItem x:Name="Settings">
					<TextBlock Background="Blue">Settings</TextBlock>
				</ListBoxItem>
					<ListBoxItem x:Name="Queue">
					<TextBlock Background="Blue">Queue</TextBlock>
				</ListBoxItem>
			</ListBox>
			<Grid Grid.Column="1" x:Name="menuPanel">
				<Grid x:Name="menuNodes" Background="Beige" Width="50" Height="500" IsVisible="False">
					
				</Grid>
				<Grid x:Name="menuSettings" Background="Aqua" Width="50" Height="500" IsVisible="False">

				</Grid>
				<Grid x:Name="menuQueue" Background="Fuchsia" Width="50" Height="500" IsVisible="False">

				</Grid>
			</Grid>
		</Grid>
	</Grid>
</Window>
